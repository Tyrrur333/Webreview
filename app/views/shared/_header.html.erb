<%= stylesheet_link_tag 'custom2',  :media => "all" ,'data-turbolinks-track': 'reload' %>

<!--header-->
<header>
  <div class="header">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Project name', root_path , :class => 'navbar-brand' %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to(content_tag(:i, 'Webサービス一覧', class: 'fas far fa-list-alt'), appposts_index_path) %></li>
              <li><%= link_to(content_tag(:i, 'Webサービスの登録', class: 'fas fa-plus-square'), appposts_new_path) %></li>
              <li><%= link_to(content_tag(:i, 'プロフィール', class: 'fas far fa-user'), current_user) %></li>
              <li><%= link_to(content_tag(:i, 'ログアウト', class: 'fas fa-sign-out-alt'), logout_path, method: :delete) %></li>
            <% else %>
              <li><%= link_to(content_tag(:i, 'ログイン',         class: 'fas fa-sign-in-alt'), login_path) %></li>
              <li><%= link_to(content_tag(:i, '新規登録',         class: 'fas fa-user-plus'), signup_path) %></li>
              <li><%= link_to(content_tag(:i, 'Webサービス一覧', class: 'far fa-list-alt'), appposts_index_path) %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>
  </div>
</header>
