<%= stylesheet_link_tag 'appposts',  :media => "all" ,'data-turbolinks-track': 'reload' %>

<div class="webservice-show container">
  <div class="contents-top row">
    <div class=" col-md-8">
      <h3 class="app-name"><%= @apppost.app_name %></h3>
      <h4 class="app-url">URL:<%= @apppost.url %></h4>
      <p>★★★★★</p>
      <p>お気に入りに追加する</p>
    </div>
  </div>

  <div class="row">
    <div class="contents-image col-xs-9">
      <%= image_tag @apppost.app_image.to_s %>
      <h3>制作会社・製作者名：<%= @apppost.author %></h3>
      <h3>サービスの説明</h3>
      <p><%= @apppost.description %></p>
      <%= link_to "編集する", edit_apppost_path(@apppost.id), class: "pull-right" %>
    </div>
      <div class="sidebar col-md-3">
        <%= render "shared/sidebar_recent_post" %>
      </div>
  </div>
  <div class="contents-description row">
    <div class="col-xs-9">

    </div>

  </div>

  <div class="row">
      <div class="col-sm-6">
        <ul>
            <%= link_to "レビューを投稿する", new_apppost_review_path(@apppost.id), class: 'btn btn-success' %>

            <%#= link_to "レビュー一覧",  apppost_reviews_path(@apppost.id), class: 'btn btn-primary', style: 'margin-top: 20px;' %>

            <h3>レビュー一覧</h3>
            <%= render "reviews/reviews" %>
        </ul>
      </div>
  </div>
</div>
