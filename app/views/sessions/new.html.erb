<%= stylesheet_link_tag 'users',  :media => "all" ,'data-turbolinks-track': 'reload' %>
<% provide(:title, 'ログイン') %>

<h1 class="text-center">ログイン</h1>

<div class="login">
  <div class="container">
    <div class="form-group">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control", placeholder: "例）review@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control", placeholder: "半角英数字６文字以上" %>
        </div>

        <div class="form-group checkbox-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>次回から自動ログインする</span>
          <% end %>
        </div>

        <div class="text-center">
          <%= link_to "パスワードを忘れた場合はこちらから", new_password_reset_path %>
        </div>

        <div class="login-btn">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="signup-btn">
        <button type="button" class="btn btn-warning">
          <%= link_to "新規登録はこちら", signup_path  %>
        </button>
      </div>
    </div>
  </div>
</div>



