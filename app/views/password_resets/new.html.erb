<%= stylesheet_link_tag 'password_resets',  :media => "all" ,'data-turbolinks-track': 'reload' %>
<% provide(:title, 'パスワード再発行') %>

<h1 class="text-center">パスワードの再発行</h1>


<div class="container">
  <div class="password_reset col-md-6 col-md-offset-3">
    <ul>
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <div class="form-group">
          <li><%= f.label :email, "メールアドレス" %></li>
          <li><%= f.email_field :email, class: "form-control" %></li>
        </div>

        <div class="btn-group">
          <li><%= f.submit "パスワードの再発行を申請する", class: "btn btn-success" %></li>
        </div>
      <% end %>
    </ul>
  </div>
</div>

