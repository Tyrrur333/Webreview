<%= stylesheet_link_tag 'users',  :media => "all" ,'data-turbolinks-track': 'reload' %>
<% provide(:title, '新規登録') %>

<h1 class="text-center">新規登録</h1>

<div class="sign">
  <div class="container">
      <div class="form-group">
        <%= form_for(@user, url: signup_path) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="form-group">
            <%= f.label :name, "アカウント名" %>
            <%= f.text_field :name, class: "form-control", placeholder: "例）山田太郎" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control", placeholder: "例）review@example.com" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: "form-control", placeholder: "半角英数字６文字以上" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード（確認）" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "半角英数字６文字以上" %>
          </div>

          <div class="sign-btn">
            <%= f.submit "新規登録", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
  </div>
</div>



